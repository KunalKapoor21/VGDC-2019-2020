{
  if (p1inAnimation == false)
  {
    p1inAnimation == true;
    p1AttackParryAnim.Play();
    p1inAnimation == false;
  }
}
if (Input.GetKeyDown("L"))
{
  if (p1inAnimation == false)
  {
    p1inAnimation == true;
    p1AttackDisengageAnim.Play();
    p1inAnimation == false;
  }
}
if (Input.GetKeyDown("[4]"))
{
  if (p2inAnimation == false)
  {
    p2inAnimation == true;
    p2AttackJabAnim.Play();
    p2inAnimation == false;
  }
}
if (Input.GetKeyDown("[5]"))
{
  if (p1inAnimation == false)
  {
    p2inAnimation == true;
