//DOES THERE NEED TO BE A DIFFERENT ANIMATION FOR EACH PLAYER AS THEY ARE GOING IN OPPOSITE DIRECTIONS?
public bool p1inAnimation = false;
public bool p2inAnimation = false;

//attacks used for effects but initialized here
public bool p1InAttackJab = false;
public bool p1InAttackSlash = false;
public bool p1InAttackParry = false;
public bool p1InAttackDisengage = false;
public bool p2InAttackJab = false;
public bool p2InAttackSlash = false;
public bool p2InAttackParry = false;
public bool p2InAttackDisengage = false;

string p1StanceUpperAnim = GetComponent<StanceUpperAnimation>();
string p1StanceEqualAnim = GetComponent<StanceUpperAnimation>();
string p1StanceLowerAnim = GetComponent<StanceUpperAnimation>();
string p2StanceUpperAnim = GetComponent<StanceUpperAnimation>();
string p2StanceEqualAnim = GetComponent<StanceUpperAnimation>();
string p2StanceLowerAnim = GetComponent<StanceUpperAnimation>();

string p1AttackJabAnim = GetComponent<AttackJabAnimation>();
string p1AttackSwingAnim = GetComponent<AttackSwingAnimation>();
string p1AttackParryAnim = GetComponent<AttackParryAnimation>();
string p1AttackDisengageAnim = GetComponent<AttackDisengageAnimation>();
string p2AttackJabAnim = GetComponent<AttackJabAnimation>();
string p2AttackSwingAnim = GetComponent<AttackSwingAnimation>();
string p2AttackParryAnim = GetComponent<AttackParryAnimation>();
string p2AttackDisengageAnim = GetComponent<AttackDisengageAnimation>();

string p1RightMovementAnim = GetComponent<RightMovement>();
string p1LeftMovementAnim = GetComponent<LeftMovement>();
string p2RightMovementAnim = GetComponent<RightMovement>();
string p2LeftMovementAnim = GetComponent<LeftMovement>();

//STANCES - DONE
if (Input.GetKeyDown("O"))
{
  if (p1inAnimation == false)
  {
    p1inAnimation == true;
    p1StanceUpperAnim.Play();
    p1inAnimation == false;
  }
}
if (Input.GetKeyDown("I"))
{
  if (p1inAnimation == false)
  {
    p1inAnimation == true
    p1StanceEqualAnim.Play();
    p1inAnimation == false;
  }
}
if (Input.GetKeyDown("U"))
{
  if (p1inAnimation == false)
  {
    p1inAnimation == true;
    p1StanceLowerAnim.Play();
    p1inAnimation == false;
  }
}
if (Input.GetKeyDown("[9]"))
{
  if (p2inAnimation == false)
  {
    p2inAnimation == true;
    p2StanceUpperAnim.Play();
    p2inAnimation == false;
  }
}
if (Input.GetKeyDown("[8]"))
{
  if (p2inAnimation == false)
  {
    p2inAnimation == true
    p2StanceEqualAnim.Play();
    p2inAnimation == false;
  }
}
if (Input.GetKeyDown("[7]"))
{
  if (p2inAnimation == false)
  {
    p2inAnimation == true;
    p2StanceLowerAnim.Play();
    p2inAnimation == false;
  }
}

//ATTACKS
if (Input.GetKeyDown("H"))
{
  if (p1inAnimation == false)
  {
    p1inAnimation == true;
    p1AttackJabAnim.Play();
    p1inAnimation == false;
  }
}
