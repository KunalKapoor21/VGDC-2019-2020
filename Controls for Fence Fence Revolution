}
if (Input.GetKeyDown("[2]"))
{
  if (p1inAnimation == false)
  {
    p2inAnimation == true;
    p2AttackDisengageAnim.Play();
    p2inAnimation == false;
  }
}

//MOVEMENTS
if (Input.GetKeyDown("D"))
{
  if (p1inAnimation == false)
  {
    p1inAnimation == true;
    p1RightMovementAnim.Play();
    p1inAnimation == false;
  }
}
if (Input.GetKeyDown("A"))
{
  if (p1inAnimation == false)
  {
